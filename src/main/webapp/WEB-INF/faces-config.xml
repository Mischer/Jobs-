   <to-view-id>/page/task/edit.jsp</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>task.edit</from-outcome>
   <to-view-id>/page/task/edit.jsp</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>task.list</from-outcome>
   <to-view-id>/page/task/list.jsp</to-view-id>
   <redirect/>
  </navigation-case>

  <navigation-case>
   <from-outcome>project.home</from-outcome>
